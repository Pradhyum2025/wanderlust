<%layout("/layouts/boilerplate")%>
<script>
   const mapToken ="<%= process.env.MAP_TOKEN%>";
</script>
<div class="row mt-3">
   <div class="col-10 offset-3">

      
   <div class="card  col-8 listing-card show-card" >
      <p class="show-details mb-3">Listing Details</p>
   <img src="<%=listing.image.url%>" 
   class="card-img-top show-img mb-1"
    alt="listing_image">

   <div class="card-body">
      <p class="card-text card-text-title"><i>Owned By : - <b><%=listing.owner.username%></b></i></p>
      <p class="card-text card-text-title"><b><%=listing.title%></b></p>
      <p class="card-text mb-3"><%=listing.description%></p>
      <p class="card-text mb-2"><%=listing.location%>,<%=listing.country%></p>
      <p class="card-text mb-4">price :&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
   </div>

 </div>
<%if(currUser && currUser._id.equals(listing.owner._id)) {%>
<div class="btn-row mt-5 mb-5">
   <div>
      <button class="btn edit-btn show-edit-btn">
         <a href="/listings/<%=listing._id%>/edit">Edit</a>
      </button>
   </div>
   <div>
      <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
         <button class="btn btn-dark">Delete</button>
      </form>
   </div>
  
</div>
<%}%>
</div>
<hr>
<!-- -------------Review form section----------------- -->
<%if(currUser){%>
<div class="col-8 offset-3" >
   <form method="post" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>
      <h2>Leave rating</h2>
      <fieldset class="starability-slot">
         <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
         <input type="radio" id="first-rate1" name="review[rating]" value="1" />
         <label for="first-rate1" title="Terrible">1 star</label>
         <input type="radio" id="first-rate2" name="review[rating]" value="2" />
         <label for="first-rate2" title="Not good">2 stars</label>
         <input type="radio" id="first-rate3" name="review[rating]" value="3" />
         <label for="first-rate3" title="Average">3 stars</label>
         <input type="radio" id="first-rate4" name="review[rating]" value="4" />
         <label for="first-rate4" title="Very good">4 stars</label>
         <input type="radio" id="first-rate5" name="review[rating]" value="5" />
         <label for="first-rate5" title="Amazing">5 stars</label>
       </fieldset>
      
      <div>
         <label for="comment" class="form-label">Comment</label>
         <textarea name="review[comment]" id="comment" class="form-control" required ></textarea>
         <div class="invalid-feedback"> leave here some comment about your experience with this place</div>
      </div>

      <button class="btn btn-dark mb-2 mt-3">Submit</button>
   </form>
</div>
<%}%>
</div>
<!-- ---------------------review section----------------------------- -->
<div class="col-10 offset-3">
  
   <p><b>All Reviews</b></p>

      <%for(let review of listing.reviews) {%>
        
         <div class="card col-5 p-2 m-2">
            <div class="card-body">
                  <h5 class="card-title">@<%=review.author.username%></h5>
               <p class="card-text"><%=review.comment %></p>
               <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
             </div>
             <%if(currUser && currUser._id.equals(review.author._id)) {%>
               <div>
                  <form  method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                     <button class="btn btn-dark">Delete</button>
                  </form>
               </div>
               <%}%>
         </div>
      <%}%>
</div>
<div class="col-10 offset-3 mb-5">
   <h3>Where you'll be</h3>
   <div id="map">

   </div>

</div>

<script src="/js/map.js"></script>

    
